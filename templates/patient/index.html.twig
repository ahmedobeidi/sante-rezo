{% extends 'base.html.twig' %}

{% block navbarDesktop %}
  <nav class="w-full font-poppins">
    <ul class="flex gap-10 justify-end">
      <li>
        <a href="{{ path('app_home') }}" class="text-off-gray hover:text-off-blue font-bold text-[16px]">Accueil</a>
      </li>
      <li>
        <a href="/#contact" class="text-off-gray hover:text-off-blue font-bold text-[16px]">Contact</a>
      </li>
      <li>
        <a href="{{ path('app_patient_profile') }}" class="text-off-blue font-bold text-[16px]">Mon Compte</a>
      </li>
      <li>
        <a href="{{ path('app_patient_appointments') }}" class="text-off-gray hover:text-off-blue font-bold text-[16px]">Mes Rendez-vous</a>
      </li>
      <li class="flex justify-end">
        <div>
          <a href="{{ path('app_logout') }}" class="bg-dark-blue text-white py-2 px-4 rounded hover:bg-off-blue text-[16px]">Déconnexion</a>
        </div>
      </li>
    </ul>
  </nav>
{% endblock %}

{% block navbarMobile %}
  <ul class="flex flex-col items-center justify-center h-full">
    <li class="mb-6">
      <a href="{{ path('app_home') }}" class="text-off-gray hover:text-off-blue text-2xl">Accueil</a>
    </li>
    <li class="mb-6">
      <a href="/#contact" class="text-off-gray hover:text-off-blue text-2xl">Contact</a>
    </li>
    {% if app.user and ('ROLE_USER' in app.user.roles or 'ROLE_PATIENT' in app.user.roles) and not ('ROLE_ADMIN' in app.user.roles or 'ROLE_DOCTOR' in app.user.roles) %}
      <li class="mb-6">
        <a href="{{ path('app_patient_profile') }}" class="text-off-blue text-2xl">Mon Compte</a>
      </li>
      <li class="mb-6">
        <a href="{{ path('app_patient_appointments') }}" class="text-off-gray hover:text-off-blue text-2xl">Mes Rendez-vous</a>
      </li>
    {% endif %}
      <li class="mb-6">
        <a href="{{ path('app_logout') }}" class="bg-dark-blue text-white py-2 px-4 rounded hover:bg-off-blue text-2xl">Déconnexion</a>
      </li>
  </ul>
{% endblock %}

{% block main %}
  <section class="mt-[90px] w-full font-poppins bg-off-test">
    <div class="flex justify-center py-4 text-xl font-semibold text-dark-gray">Mon Compte</div>
    {# Flash messages #}
    {% for message in app.flashes('success') %}
      <div class="container mx-auto px-4 mb-4">
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
          <p>{{ message }}</p>
        </div>
      </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
      <div class="container mx-auto px-4 mb-4">
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <p>{{ message }}</p>
        </div>
      </div>
    {% endfor %}

    <div class="container mx-auto px-4 py-8">
      <div class="flex flex-col lg:flex-row gap-6">
        <!-- Profile Image div -->
        <div class="w-full lg:w-1/3 flex flex-col justify-center bg-off-white p-6 rounded-3xl shadow-lg border border-solid border-dark-blue">
          <div class="w-full flex flex-col items-center gap-4">
            <img src="{{ patient.profileImage ? asset('uploads/profiles/' ~ patient.profileImage) : asset('img/default2.png') }}" 
                 alt="profile image" 
                 class="w-48 h-48 rounded-full object-cover" />
        
            <form action="{{ path('app_patient_upload_image') }}" method="POST" enctype="multipart/form-data" class="w-full flex flex-col items-center gap-2">
                <input type="file" 
                      name="profileImage" 
                      id="profileImage" 
                      accept="image/*" 
                      class="hidden" 
                      onchange="this.form.submit()" />
                <label for="profileImage" class="bg-dark-blue text-white py-2 px-4 rounded hover:bg-off-blue text-[16px] cursor-pointer">
                    Changer la photo
                </label>
            </form>

            {% if patient.profileImage %}
              <form action="{{ path('app_patient_delete_image') }}" method="POST" class="flex flex-col items-center">
                  <button type="submit" class="bg-red-500 text-white py-2 px-4 rounded hover:bg-red-600 text-[16px]">
                      Supprimer la photo
                  </button>
              </form>
            {% endif %}
          </div>
        </div>

        <!-- Form inputs div -->
        <div class="w-full lg:w-2/3 bg-off-white p-6 rounded-3xl shadow-lg border border-solid border-dark-blue">
          <form action="{{ path('app_patient_update') }}" method="POST" class="flex flex-col gap-4">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('update-patient') }}" />
            <div class="flex flex-col md:flex-row gap-4">
              <div class="w-full">
                <label for="lastName" class="block text-sm font-medium text-gray-700 mb-1">Nom</label>
                <input type="text" id="lastName" name="lastName" value="{{ patient.lastName }}" class="p-3 border border-dotted border-gray-500 rounded-md w-full" placeholder="Nom" {% if patient.lastName %}required{% endif %} />
              </div>
              <div class="w-full">
                <label for="firstName" class="block text-sm font-medium text-gray-700 mb-1">Prénom</label>
                <input type="text" id="firstName" name="firstName" value="{{ patient.firstName }}" class="p-3 border border-dotted border-gray-500 rounded-md w-full" placeholder="Prénom" {% if patient.firstName %}required{% endif %}/>
              </div>
            </div>
            <div class="w-full">
              <label for="city" class="block text-sm font-medium text-gray-700 mb-1">Ville</label>
              <select id="city" name="city" class="p-3 border border-dotted border-gray-500 rounded-md w-full" {% if patient.city %}required{% endif %}>
                <option value="">Sélectionnez une ville</option>
                {% set cities = [
                  "Paris", "Marseille", "Lyon", "Toulouse", "Nice", "Nantes", "Strasbourg", "Montpellier", 
                  "Bordeaux", "Lille", "Rennes", "Reims", "Le Havre", "Saint-Étienne", "Toulon", 
                  "Grenoble", "Dijon", "Angers", "Villeurbanne", "Le Mans", "Aix-en-Provence", 
                  "Clermont-Ferrand", "Brest", "Tours", "Limoges", "Amiens", "Annecy", "Perpignan", 
                  "Boulogne-Billancourt", "Metz", "Besançon", "Orléans", "Argenteuil", "Rouen", 
                  "Mulhouse", "Caen", "Nancy", "Saint-Denis", "Saint-Paul", "Montreuil", "Avignon"
                ] %}
                {% for city in cities %}
                  <option value="{{ city }}" {% if patient.city == city %}selected{% endif %}>{{ city }}</option>
                {% endfor %}
              </select>
            </div>
            <div class="w-full">
              <label for="address" class="block text-sm font-medium text-gray-700 mb-1">Adresse</label>
              <input type="text" id="address" name="address" value="{{ patient.address }}" class="p-3 border border-dotted border-gray-500 rounded-md w-full" placeholder="Adresse" {% if patient.address %}required{% endif %}/>
            </div>
            <button type="submit" class="bg-dark-blue text-white py-2 px-4 rounded hover:bg-off-blue text-[16px] w-full sm:w-auto sm:self-end">Enregistrer</button>
          </form>
        </div>
      </div>
    </div>

     <!-- Add this after the existing patient profile form -->
    <div class="container mx-auto px-4 py-8">    
        <div class="flex flex-col">
          <button 
            type="button" 
            class="bg-dark-blue text-white py-2 px-4 rounded hover:bg-off-blue text-[16px] w-full sm:w-auto sm:self-end"
            onclick=toggleUpdatePasswordForm()
          >
            Modifier le mot de passe
          </button>

          <form 
            id="edit-password-form" 
            action="{{ path('app_patient_handle_reset_password_form') }}" 
            method="POST" 
            class="flex-col gap-4 mt-4 hidden p-6 rounded-3xl shadow-lg border border-solid border-dark-blue"
          >
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('update-password') }}" />

            <div class="w-full">
              <label for="current_password" class="block text-sm font-medium text-gray-700 mb-1">Mot de passe actuel</label>
              <input 
                type="password" 
                id="current_password" 
                name="current_password" 
                class="p-3 border border-dotted border-gray-500 rounded-md w-full" 
                placeholder="Mot de passe actuel" 
                required 
              />
            </div>

            <div class="w-full">
              <label for="new_password" class="block text-sm font-medium text-gray-700 mb-1">Nouveau mot de passe</label>
              <input 
                type="password" 
                id="new_password" 
                name="new_password" 
                class="p-3 border border-dotted border-gray-500 rounded-md w-full" 
                placeholder="Nouveau mot de passe" 
                required 
              />
            </div>

            <div class="w-full">
              <label for="confirm_password" class="block text-sm font-medium text-gray-700 mb-1">Confirmer le mot de passe</label>
              <input 
                type="password" 
                id="confirm_password" 
                name="confirm_password" 
                class="p-3 border border-dotted border-gray-500 rounded-md w-full" 
                placeholder="Confirmer le mot de passe" 
                required 
              />
            </div>

            <button 
              type="submit" 
              class="bg-dark-blue text-white py-2 px-4 rounded hover:bg-off-blue text-[16px] w-full md:w-auto md:self-end"
            >
              Enregistrer
            </button>
          </form>
        </div>
      </div>

        <!-- Delete my account -->
      <div class="container mx-auto px-4 pb-6">
        <form action="{{ path('app_patient_delete_account') }}" method="POST" class="flex flex-col">
          <input type="hidden" name="_csrf_token" value="{{ csrf_token('delete-account') }}" />
          <button 
            type="submit" 
            class="bg-red-500 text-white py-2 px-4 rounded hover:bg-red-600 text-[16px] w-full sm:w-auto sm:self-end"
            onclick="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible.')"
          >
            Supprimer mon compte
          </button>
        </form>
      </div>
  </section>

  <script>
    function toggleUpdatePasswordForm() {
      const editPasswordForm = document.getElementById('edit-password-form')
      editPasswordForm.classList.toggle('hidden');
      editPasswordForm.classList.toggle('flex');
    }
  </script>
{% endblock %}
