{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block navbar %}{% endblock %}

{% block main %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
			{{ flash_error }}
		</div>
	{% endfor %}
	<section class="flex items-center justify-center w-full h-[100vh]">
		<div class="flex flex-col lg:flex-row w-11/12 sm:w-2/3 lg:w-2/3 border-2 border-opacity-50 rounded-lg">
			<div class="registration w-full lg:w-1/2 aspect-[3/2] bg-cover bg-center bg-no-repeat"></div>
			<div class="flex flex-col gap-5 w-full lg:w-1/2 p-7 lg:py-12 lg:px-10 bg-slate-100">
				<h3 class="font-poppins text-2xl border-5 font-medium">Register</h3>
				{{ form_start(registrationForm, {
                    'attr': {
                        'class': 'flex flex-col gap-5',
                        'role': 'form',
                        'id': 'register-form',
                        'accept-char': 'UTF-8',
                        'autocomplete': 'off',
                        'method': 'POST'
                    }
                }) }}

				<div class="flex flex-col gap-1 text-red-700">
					{{ form_errors(registrationForm.email) }}
					{{ form_errors(registrationForm.plainPassword.first) }}
					{{ form_errors(registrationForm.plainPassword.second) }}
				</div>

				<div class="flex flex-col gap-1">
					{{ form_label(registrationForm.email) }}
					{{ form_widget(registrationForm.email) }}
				</div>

				<div class="flex flex-col gap-1">
					{{ form_label(registrationForm.plainPassword.first) }}
					{{ form_widget(registrationForm.plainPassword.first) }}
				</div>

				<div class="flex flex-col gap-1">
					{{ form_label(registrationForm.plainPassword.second) }}
					{{ form_widget(registrationForm.plainPassword.second) }}
				</div>

				<input type="submit" value="Register" class="text-center bg-off-blue text-off-white py-3 hover:bg-dark-gray">

				<div class="text-center">
					<p>Already have an account?<a href="{{ path('app_login') }}" class="text-off-blue">
							Login</a>
					</p>
				</div>

				{{ form_end(registrationForm) }}
			</div>
		</div>
	</section>
{% endblock %}
