{% extends 'base.html.twig' %}

{% block title %}
  Mot de passe oublié
{% endblock %}

{% block navbarDesktop %}
  <nav class="w-full font-poppins">
    <ul class="flex gap-10 justify-end">
      <li class="active">
        <a href="{{ path('app_home') }}" class="text-off-gray hover:text-off-blue font-bold text-[16px]">Accueil</a>
      </li>
      <li>
        <a href="/#contact" class="text-off-gray hover:text-off-blue font-bold text-[16px]">Contact</a>
      </li>
      <li class="flex justify-end">
        <div>
          <a href="{{ path('app_login') }}" class="bg-dark-blue text-white py-2 px-4 rounded hover:bg-off-blue text-[16px]">Se connecter</a>
        </div>
      </li>
    </ul>
  </nav>
{% endblock %}

{% block navbarMobile %}
  <ul class="flex flex-col items-center justify-center h-full">
    <li class="mb-6">
      <a href="#" class="text-off-blue text-2xl">Accueil</a>
    </li>
    <li class="mb-6">
      <a href="/#contact" class="text-off-gray text-2xl">Contact</a>
    </li>

    {% if app.user %}
      <li class="mb-6">
        <a href="{{ path('app_patient_profile') }}" class="text-off-gray text-2xl">Mon Compte</a>
      </li>
      <li class="mb-6">
        <a href="{{ path('app_logout') }}" class="bg-dark-blue text-white py-2 px-4 rounded hover:bg-off-blue text-[16px]">Déconnexion</a>
      </li>
    {% else %}
      <li class="mb-6">
        <a href="{{ path('app_login') }}" class="bg-dark-blue text-white py-2 px-4 rounded hover:bg-off-blue text-[16px]">Se connecter</a>
      </li>
    {% endif %}
  </ul>
{% endblock %}

{% block main %}
  <section class="flex items-center justify-center w-full h-[100vh]">
    <div class="flex flex-col lg:flex-row w-11/12 sm:w-2/3 lg:w-2/3 border-2 border-opacity-50 rounded-lg">
      <div class="registration w-full lg:w-1/2 aspect-[3/2] bg-cover bg-center bg-no-repeat"></div>
      <div class="flex flex-col gap-5 w-full lg:w-1/2 p-7 lg:py-12 lg:px-10 bg-slate-100">
        <h3 class="font-poppins text-2xl border-5 font-medium">Mot de passe oublié</h3>
        <form method="post" class="flex flex-col gap-5 w-full">
          {% for message in app.flashes('success') %}
            <div class="bg-green-100 border border-green-400 text-green-700 p-4 rounded mb-4">{{ message }}</div>
          {% endfor %}
          {% for message in app.flashes('error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 p-4 rounded mb-4">{{ message }}</div>
          {% endfor %}

          <div>
            <label for="email" class="block text-sm font-medium text-gray-700">Adresse e-mail</label>
            <input type="email" name="email" id="email" autocomplete="email" required autofocus class="mt-1 block w-full border border-gray-300 rounded p-2" placeholder="Adresse e-mail" />
          </div>

          <button type="submit" class="text-center bg-off-blue text-off-white py-3 hover:bg-dark-gray">Envoyer</button>
        </form>
      </div>
    </div>
  </section>
{% endblock %}