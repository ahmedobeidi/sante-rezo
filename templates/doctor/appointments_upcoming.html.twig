{% extends 'doctor/appointments.html.twig' %}

{% block content %}
<h2 class="text-xl font-bold text-dark-gray mb-6">Mes rendez-vous à venir</h2>

<!-- Filter/Search Section -->
<div class="bg-white shadow-lg rounded-lg p-6 border-2 border-dotted border-gray-400 mb-6">
  <form method="GET" action="{{ path('app_doctor_appointments_upcoming') }}" class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <label for="date_filter" class="block text-sm font-medium text-gray-700 mb-1">Filtrer par date</label>
      <input 
        type="date" 
        id="date_filter"
        name="date_filter" 
        value="{{ date_filter|default('') }}" 
        class="w-full p-3 border border-solid border-gray-400 rounded-md cursor-pointer"
      />
    </div>
    <div class="flex items-end">
      <button type="submit" class="bg-dark-blue text-white py-2 px-4 rounded hover:bg-off-blue w-full md:w-auto">
        <i class="fas fa-search mr-2"></i> Filtrer
      </button>
      {% if date_filter is defined and date_filter is not empty %}
        <a href="{{ path('app_doctor_appointments_upcoming') }}" class="ml-2 bg-gray-200 text-gray-700 py-2 px-4 rounded hover:bg-gray-300">
          <i class="fas fa-times mr-2"></i> Réinitialiser
        </a>
      {% endif %}
    </div>
  </form>
</div>

{% if appointmentsByDay is not empty %}
  <div class="flex flex-col gap-6">
    {% for dateKey, dayAppointments in appointmentsByDay %}
      <div class="bg-white shadow-lg rounded-lg p-6 border-2 border-dotted border-gray-400">
        <div class="mb-4">
          <h2 class="text-xl font-bold text-dark-gray">
            {{ dayAppointments[0].date|format_datetime(locale='fr',pattern="EEEE dd MMMM YYYY") }}
          </h2>
          <div class="h-1 w-20 bg-off-blue mt-2 mb-4"></div>
        </div>
        
        <div class="space-y-6">
          {% for appointment in dayAppointments %}
            <div class="{% if not loop.last %}pb-4 border-b border-gray-200{% endif %}">
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-4">
                  <div class="bg-off-blue text-white p-2 rounded-lg">
                    <span class="font-bold">{{ appointment.date|date('H:i') }}</span>
                  </div>
                  
                  <div class="flex flex-row gap-3">
                    <p class="text-sm text-off-gray"><strong>Statut:</strong> 
                      <span class="text-green-600">
                        {{ appointment.status }}
                      </span>
                    </p>
                    {% if appointment.patient is not null %}
                      <p class="text-sm text-dark-gray"><strong>Patient:</strong> {{ appointment.patient.firstName }} {{ appointment.patient.lastName }}</p>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endfor %}
  </div>

  <!-- Pagination Controls -->
  <div class="mt-6">
    {{ knp_pagination_render(appointments, 'pagination/custom_pagination.html.twig') }}
  </div>
{% else %}
  <div class="bg-white shadow-lg rounded-lg p-6 border-2 border-dotted border-gray-400 text-center">
    <i class="fas fa-calendar-times text-4xl text-gray-400 mb-3"></i>
    <p class="text-off-gray text-lg">Vous n'avez aucun rendez-vous à venir{% if date_filter is defined and date_filter is not empty %} à cette date{% endif %}.</p>
  </div>
{% endif %}

<script>
  // Ensure clicking anywhere on the date input opens the calendar
  document.getElementById('date_filter').addEventListener('click', function () {
    this.showPicker();
  });
</script>
{% endblock %}